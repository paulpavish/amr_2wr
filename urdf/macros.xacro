<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="chassis">
<link name="link_chassis">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>
    <!-- body -->
    <collision name="collision_chassis">
      <geometry>
        <box size="0.5 0.3 0.07"/>
        <!--<mesh filename="package://amr_2wr/models/amr_2wr/meshes/Chasis.stl" scale="0.001 0.001 0.001"/>-->
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 -1.5707" xyz="0.075 -0.055 -0.1"/>
      <geometry>
        <!--<box size="0.5 0.3 0.07"/>-->
        
        <mesh filename="package://amr_2wr/models/amr_2wr/meshes/Chasis.stl" scale="0.00185 0.00185 0.00185" />
      </geometry>
      <material name="red"/>
    </visual>
    
    <!-- caster front -->
    <collision name="caster_front_collision">
      <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <visual name="caster_front_visual">
      <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
      <geometry>
        <sphere radius="0.001"/>
      </geometry>
    </visual>
    
  </link>
</xacro:macro>


	<xacro:macro name="link_wheel" params="link_name">
	<link name="${link_name}">
    	<inertial>
      	<mass value="0.2"/>
      	<origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      	<inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
    	</inertial>
    	<collision name="${link_name}_collision">
      	<origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      	<geometry>
        <cylinder length="0.04" radius="0.1"/>
        <!--<mesh filename="package://amr_2wr/models/amr_2wr/meshes/Wheel.stl" scale="0.001 0.001 0.001"/>-->
      	</geometry>
    	</collision>
    	<visual name="${link_name}_visual">
    	<!-- ONLY CHANGE XYZ -->
      	<origin rpy="0 0 1.5707" xyz="0 0 0"/>
      	<geometry>
        <!--<cylinder length="0.04" radius="0.1"/>-->
        <mesh filename="package://amr_2wr/models/amr_2wr/meshes/Wheel.stl" scale="0.00185 0.00185 0.00185"/> 
      	</geometry>
    	</visual>
	</link>
	</xacro:macro>  
	
	<xacro:macro name="wheel_joint" params="position x y z child">
	<joint name="joint_${position}_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
    <child link="${child}"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
	</xacro:macro>
	
	<xacro:macro name="lidar" params="mass r l">
	<link name="sensor_laser">
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="${mass}" />
        
  <inertia  ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
            iyy="${mass*(3*r*r+l*l)/12}" iyz = "0"
            izz="${mass*(r*r)/2}" />
    </inertial>

    <visual>
        <origin xyz="0.155 -0.45 -0.11" rpy="0 0 -1.5707"/>
        <geometry>
        <!--<cylinder radius="0.05" length="0.1"/>-->
        <mesh filename="package://amr_2wr/models/amr_2wr/meshes/RpLidar.stl" scale="0.00185 0.00185 0.00185" />
        </geometry>
        <material name="black" />
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <cylinder radius="0.05" length="0.1"/>
        </geometry>
    </collision>
    </link>
    <joint name="joint_sensor_laser" type="fixed">
    <origin xyz="0.15 0 0.05" rpy="0 0 0"/>
    <parent link="link_chassis"/>
    <child link="sensor_laser"/>
  </joint>
	</xacro:macro>
</robot>
